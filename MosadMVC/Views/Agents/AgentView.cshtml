@model IEnumerable<ProjectMosadApi.Models.M_Agent>

@{
    ViewData["Title"] = "פרטי סוכנים";
}

<h1>AgentView</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loc_X)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loc_Y)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loc_X)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loc_Y)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="GetAgent" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
<a asp-controller="Home" asp-action="ShowMissions">צפייה במשימות אופציונליות</a> |
<a asp-controller="Targets" asp-action="TaretsView">צפייה במטרות</a>
    </tbody>
</table>
