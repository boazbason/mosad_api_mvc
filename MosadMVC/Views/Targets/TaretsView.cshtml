@model IEnumerable<ProjectMosadApi.Models.M_Target>

@{
    ViewData["Title"] = "TaretsView";
}

<h1>TaretsView</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loc_X)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loc_Y)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loc_X)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loc_Y)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
<a asp-controller="Agents" asp-action="AgentView">צפייה בסוכנים</a> |
<a asp-controller="Home" asp-action="ShowMissions">צפייה במשימות אופציונליות</a> |
    </tbody>
</table>
